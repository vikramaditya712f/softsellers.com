        <hr class="header-separator">
        <div class="total_amount">
                <p class="subtotal">Subtotal (<span id="num_of_items">2</span> : item) <span id="rupee_sign">&#x20B9</span><span id="t_price">1200</span></p>
        </div>
    </section>

    <section class="detail_list">
        <div class="sub_details">
            <div class="head">
                <h2>Price Details</h2>
            </div>
            <div class="sub_details_content">
                <div class="l1">
                    <label id="price_label">Price (<span id="num_of_items">2 </span>item)</label>
                    <label id="price"><span id="rupee_sign">&#x20B9</span><span id="og_price">1500</span></label>
                </div>
                <div class="l2">
                    <label id="price_label">Discount</label>
                    <label id="d_price">&minus;<span id="rupee_sign">&#x20B9</span><span id="d_price">300</span></label>
                </div>
                <hr class="header-separator">
                <div class="l3">
                    <label id="price_label">Total Amount</label>
                    <label id="d_price"><span id="rupee_sign">&#x20B9</span><span id="a_price">1200</span></label>
                </div>
                <div class="savings">
                    <p>You will save <span id="rupee_sign">&#x20B9</span><span id="d_price">300</span> on ths order</p>
                </div>
                <div class="payment">
                    <button id="to_payment" type="submit"><a href="/api/v1/order/buyProduct"> Buy </a></button>
                </div>
            </div>
        </div>
    </section>



