            <li class="item"><a href=""><i class="fa-solid fa-cart-arrow-down"></i>Cart</a></li>
        </ul>
    </nav>

    <header class="categories">
        <div class="cat_items">
            <a href="cat_txt.html">
                <h3>Text files :</h3>
                <p>.pdf, .docx, .xlsx, .ppt</p>
            </a>
        </div>
        <div class="cat_items">
            <a href="cat_img.html">
                <h3>Image files :</h3>
                <p>.png, .jpeg, .jpg, .heic</p>
            </a>
        </div>
        <div class="cat_items">
            <a href="cat_audio.html">
                <h3>Audio Files : </h3>
                <p>.mp3,.mp4,.3ga,.aac</p>
            </a>
        </div>
        <div class="cat_items">
            <a href="cat_vid.html">
                <h3>Video Files :</h3>
                <p>.mkv,.mp4,.wmv,.mpeg</p>
            </a>
        </div>
    </header>

    <section class="main">
        <div class="main_cart">
            <div class="cart-header">
                <div class="head1">Shopping Cart</div>
                <div class="head2">Price</div>
            </div>
            <% if(productsData != '' && cartsData != '') {%>

                <% productsData.forEach((row, index) => { %>
                    <% cartsData.forEach((row1, index1) => { %>
                        <% if(row._id.toString() == row1.cart_id.toString()) {%>

                            <hr class="header-separator">
                            <div class="itemcontainer">
                                <div class="img-container">
                                    <img src="/<%=row.imageCover%>" alt="about to display">
                                </div>
                                <div class="other-info">
                                    <p class="title"><%= row.description%>
                                    </p>
                                    <button id="delete">delete</button>
                                    
                                </div>
                                <div class="display_price">
                                    <p id="d_price"><span>&#x20B9</span><%= row.price%></p>
                                </div>
                            </div>
                            <hr class="header-separator">

                        <% } %>

                    <% }) %>
                <% }) %>
            <% } else { %>
                <h1>No product available</h1>>
            <% } %>

            
            
            
            
